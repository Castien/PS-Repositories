<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>DVD List</title>
</head>
<body>
  <h1>DVD List</h1>
  <ul>
    <% dvdData.forEach(entry => { %>
      <li><%= entry.title %> - <%= entry.release_date %></li>
    <% }); %>
  </ul>

  <!-- Form to add a new DVD -->
  <h2>Add a New DVD</h2>
  <form action="/api/v1/dvd" method="POST">
    <label for="title">Title:</label>
    <input type="text" id="title" name="title" required>

    <label for="type">Type:</label>
    <input type="text" id="type" name="type" required>

    <label for="format">Format (DVD/BR):</label>
    <input type="text" id="format" name="dvd_br" required>

    <label for="studio">Studio:</label>
    <input type="text" id="studio" name="studio" required>

    <label for="releaseDate">Release Date:</label>
    <input type="text" id="releaseDate" name="release_date" required>

    <label for="upc">UPC:</label>
    <input type="text" id="upc" name="upc" required>

    <button type="submit">Add DVD</button>
  </form>
</body>
</html>
